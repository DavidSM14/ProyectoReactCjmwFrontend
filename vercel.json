{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/routes/$1"
        }
    ],
    "builds": [
        {
            "src": "server/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/**/package.json",
            "use": "@vercel/static-build"
        }
    ]
}