{
    "version": 2,
    "builds": [
        {
            "src": "server/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/**/*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/src/index.html"
        }
    ]
}